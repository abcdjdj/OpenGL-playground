{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-Wall",
                "-lGL",
                "-lGLEW",
                "-lglfw",
                "-o",
                "main.out"
            ],
            "group": "build"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./main.out",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [ "Build" ]
        }
    ]
}